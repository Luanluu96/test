<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tạo Tài Khoản"
        android:id="@+id/textView"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_name"
            android:layout_gravity="center_horizontal"
            android:hint="Nhập Tên"
            android:drawableLeft="@android:drawable/ic_menu_edit"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_email"
            android:layout_gravity="center_horizontal"
            android:hint="Nhập email đăng nhập"
            android:drawableLeft="@android:drawable/ic_menu_edit"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_password"
            android:layout_gravity="center_horizontal"
            android:hint="Nhập mật khẩu"
            android:drawableLeft="@android:drawable/ic_menu_edit"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_confirm_password"
            android:layout_gravity="center_horizontal"
            android:hint="Nhập lại mật khẩu"
            android:drawableLeft="@android:drawable/ic_menu_edit"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Ngày: "
                android:id="@+id/textView2"
                android:gravity="center" />

            <EditText
                android:layout_width="60dp"
                android:layout_height="fill_parent"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editText_date"
                android:textAlignment="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Tháng: "
                android:id="@+id/textView3"
                android:gravity="center" />

            <EditText
                android:layout_width="60dp"
                android:layout_height="fill_parent"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editText_month"
                android:textAlignment="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Năm: "
                android:id="@+id/textView6"
                android:gravity="center" />

            <EditText
                android:layout_width="60dp"
                android:layout_height="fill_parent"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editText_year"
                android:textAlignment="center" />

        </LinearLayout>

        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nam"
                android:id="@+id/radio_nam"
                android:layout_gravity="right"
                android:checked="false"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nữ"
                android:id="@+id/radio_nu"
                android:checked="false"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp" />

        </RadioGroup>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/editText_phone"
            android:layout_gravity="center_horizontal"
            android:hint="Nhập số điện thoại"
            android:drawableLeft="@android:drawable/ic_menu_edit"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_my_address"
            android:layout_gravity="center_horizontal"
            android:hint="Nơi sinh sống hiện tại"
            android:drawableLeft="@android:drawable/ic_menu_edit"/>

        <CheckBox
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Quán ăn/Cửa hàng/Nhà Hàng/..."
            android:id="@+id/checkBox_restaurant"
            android:layout_gravity="right"
            android:checked="false" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đồng Ý"
                android:id="@+id/btn_done"
                android:enabled="true"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>